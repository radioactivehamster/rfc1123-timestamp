# EditorConfig is awesome: http://editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
index_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[{M,m}akefile]
indent_style = tab

[package.json]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false
